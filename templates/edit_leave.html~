<!-- edit_leave.html -->
<tr data-id="{{ leave.id }}" hx-target="this" hx-swap="outerHTML">
  <td><input type="date" name="start_date" value="{{ leave.start_date }}"></td>
  <td><input type="date" name="end_date" value="{{ leave.end_date }}"></td>
  <td>
    <select name="leave_type">
      <option value="maternity"{% if leave.leave_type == "maternity".to_string().clone() %}selected{% endif %}>Maternity</option>
      <option value="paternity"{% if leave.leave_type == "paternity".to_string().clone() %}selected{% endif %}>Paternity</option>
      <option value="vacation" {% if leave.leave_type == "vacation".to_string().clone() %}selected{% endif %}>Vacation (PTO)</option>
      <option value="sick" {% if leave.leave_type == "sick".to_string().clone() %}selected{% endif %}>Sick</option>
      <option value="study" {% if leave.leave_type == "study".to_string().clone() %}selected{% endif %}>Study</option>
    </select>
  </td>
  <td>{{ leave.status }}</td>
  <td><input type="text" name="comments" value="{% if let Some(comment) = leave.comments %}{% if !comment.is_empty() %} {{ comment }} {% endif %}{% endif %}"></td>
  <td>
    <button hx-put="/leave/{{ leave.id }}" hx-include="closest tr">Save</button>
    <button hx-get="/leave/{{ leave.id }}" hx-target="closest tr">Cancel</button>
  </td>
</tr>
